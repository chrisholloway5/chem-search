# Environment Configuration for Chem Search
# Copy this file to .env and update the values

# Application Settings
APP_NAME=Chem Search
APP_VERSION=1.0.0
APP_DEBUG=false
APP_URL=http://localhost/chem-search

# Python Environment
PYTHON_PATH=C:/xampp/htdocs/chem-search/project/.venv/Scripts/python.exe

# API Keys (keep these secret!)
OPENAI_API_KEY=your_openai_api_key_here

# AI Model Settings (Options for AI model configuration, gpt4, claude, etc.)
DEFAULT_AI_MODEL=gpt-3.5-turbo
DEFAULT_TEMPERATURE=0.1

# Security Settings
SESSION_LIFETIME=3600
CSRF_TOKEN_NAME=csrf_token

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Database Configuration
DB_HOST=localhost
DB_NAME=chem_search
DB_USER=root
DB_PASS=

# Enable database features
USE_DATABASE=true
